[core]
	quotepath = false
	excludesfile = ~/.gitignore
[color]
	ui = auto
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[push]
	default = simple
[alias]
  c = commit
  co = checkout
  ct = "!checkoutNewBranch() { git fo; git co -t origin/$1; }; checkoutExistingBranch() { git co $1; git up $1; }; checkoutNewBranch || checkoutExistingBranch"
  fo = fetch origin
  my-branch = rev-parse --abbrev-ref HEAD
  reset-to = "!f() { prev_branch=`git my-branch`; git co master; git branch -d $prev_branch; git up; }; f"
  up = "!f() { git pull origin `git my-branch`; }; f"
  l = log --oneline
  lg = log -n 20 --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  cob = checkout -b

